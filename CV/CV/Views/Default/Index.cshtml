@using CV.Models.Entity
@model List<About>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    @foreach (var x in Model)
    {
    <title>@x.FIRSTNAME @x.SECONDNAME @x.SURNAME - CV</title>
    }
    <link rel="icon" type="image/x-icon" href="/startbootstrap-resume-gh-pages/assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/startbootstrap-resume-gh-pages/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top" class="bg-body">
    <!-- Navigation-->
    @foreach(var y in Model) { 
    <nav class=" border-end  navbar navbar-expand-lg navbar-dark bg-black fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">@y.FIRSTNAME @y.SECONDNAME @y.SURNAME CV</span>
            <span class="d-none d-lg-block"><img  width="450" height="450" class=" img-profile rounded-circle mx-auto mb-2" src="@y.PHOTO" alt="..." /></span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#welcome">Welcome</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">About</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#experience">Experience</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#education">Education</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#skills">Skills</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#portfolio">Portfolio</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#interests">Interests</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#certificate">Certificate</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#languages">Languages</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#contact">Contact</a></li>
            </ul>
        </div>
    </nav>
    }
    <!-- Page Content-->
    <section class="resume-section" id="welcome">
        @Html.Action("Welcome")
    </section>
    <hr class="m-0" />
    <div class="container-fluid p-0">
        <!-- About-->
        @foreach (var x in Model)
        {
            <section class="resume-section" id="about">
                <div class="resume-section-content">
                    <h1 class="mb-0 text-black">
                        @x.FIRSTNAME @x.SECONDNAME
                        <span class="text-primary">@x.SURNAME</span>
                    </h1>
                    <br />
                    <div class="card shadow-lg p-3 rounded text-white bg-black mb-3 " style="max-width: 50rem;">
                        <div class="card-body">
                            <p class="subheading mb-5">

                                <span class="text-light">Birth Day:</span>
                                <span class="text-primary">@x.BIRTHDAY</span>
                            </p>
                            <h3 class="subheading mb-5">
                                <span class="text-light">Location:</span>
                                <span class="text-primary">@x.LOCATION</span>
                            </h3>
                            <h3 class="subheading mb-5">
                                <span class="text-light">Phone:</span>
                                <span class="text-primary">@x.PHONE</span>
                                <span class="text-light">   -   </span>
                                <span class="text-light">Mail:</span>
                                <span class="text-liht"><a href="@x.EMAIL">@x.EMAIL</a></span>
                            </h3>
                            <h3 class="subheading mb-5">
                                <span class="text-light">Driving Licence:</span>
                                <span class="text-primary">@x.DRIVINGLICENCE</span>
                            </h3>

                            <p class="lead mb-5">@x.DESCRIPTION</p>
                        </div>
                    </div>

                    @Html.Action("SocialMedia")

                </div>
            </section>
        }
        <hr class="m-0" />
        <!-- Experience-->
        <section class="resume-section" id="experience">
            @Html.Action("Experience")
        </section>
        <hr class="m-0" />
        <!-- Education-->
        <section class="resume-section" id="education">
            @Html.Action("Education")
        </section>
        <hr class="m-0" />
        <!-- Skills-->
        <section class="resume-section" id="skills">
            @Html.Action("Skills")
        </section>
        <hr class="m-0" />
        <!-- Portfolio-->
        <section class="resume-section" id="portfolio">
            @Html.Action("Portfolio")
        </section>
        <hr class="m-0" />
        <!-- Interests-->
        <section class="resume-section" id="interests">
            @Html.Action("Interests")
        </section>
        <hr class="m-0" />
        <!-- Awards-->
        <section class="resume-section" id="certificate">
            @Html.Action("Certificates")
        </section>
        <hr class="m-0" />
        <!-- Languages-->
        <section class="resume-section" id="languages">
            @Html.Action("Languages")
        </section>
        <hr class="m-0" />
        <!-- Contact-->
        <section class="resume-section" id="contact">
            @Html.Action("Contact")
        </section>
        <hr class="m-0" />
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/startbootstrap-resume-gh-pages/js/scripts.js"></script>
</body>
</html>
