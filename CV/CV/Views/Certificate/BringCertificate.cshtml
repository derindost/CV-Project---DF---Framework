@model CV.Models.Entity.Certificate
@{
    ViewBag.Title = "BringCertificate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<header class="d-flex justify-content-center py-3 bg-white border-bottom">
    <h2>Certificate Update Page</h2>
</header>
<br />
<form method="post">
    @Html.Label("Name")
    @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.NAME, "", new { @style = "color:red" })
    <br />
    @Html.Label("Corporation")
    @Html.TextBoxFor(x => x.CORPORATION, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CORPORATION, "", new { @style = "color:red" })
    <br />
    @Html.Label("Url")
    @Html.TextBoxFor(x => x.URL, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.URL, "", new { @style = "color:red" })
    <br />
    @Html.Label("Date")
    <input type="date" name="Date" class="form-control" />
    @Html.ValidationMessageFor(x => x.DATE, "", new { @style = "color:red" })
    <div class="text-black-50">
        Choose Date
    </div>
    <br />
    <button class="btn btn-success">Update</button>
    <a href="/Certificate/DeleteCertificate/@ViewBag.d">Delete</a>
</form>
