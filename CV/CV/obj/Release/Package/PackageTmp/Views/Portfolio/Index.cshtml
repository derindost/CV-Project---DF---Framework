@using CV.Models.Entity
@model List<Portfolio>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<header class="d-flex justify-content-center py-3 bg-white border-bottom">
    <h2>Portfolio Edit Page</h2>
</header>
<br />

@foreach (var item in Model)
{

    <div class="row">
        <div class="col-md-4">
            <!-- Widget: user widget style 2 -->
            <div class="card card-widget">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header" style="width: 250px; height: 150px; background: url('@item.IMAGEURL') center center;">

                </div>
                <div class="card-footer p-0">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link">
                                @item.PROJECT
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                @item.DEFINITION
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@item.PROJECTURL" class="nav-link">
                                Go to Project
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Portfolio/EditPortfolio/@item.ID" class="btn btn-info btn-sm">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Update
                            </a>
                            <a href="/Portfolio/DeletePortfolio/@item.ID" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <br />
}
<a href="/Portfolio/AddPortfolio" class="btn btn-info">Add Portfolio</a>